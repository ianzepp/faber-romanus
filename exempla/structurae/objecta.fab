// =============================================================================
// PRACTICAL EXAMPLES
// =============================================================================

// API response
fixum response = { status: 200, data: { id: 1, name: "Marcus" }, error: nihil }

si response.status == 200 {
    scribe "Success:", response.data.name
}

// Form data
fixum formData = { username: "julia", email: "julia@example.com", acceptTerms: verum }

si formData.acceptTerms {
    scribe "Submitting for:", formData.username
}
