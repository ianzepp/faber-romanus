// Assignment expressions
// Simple and compound assignment operators

initium {
    varia numerus x = 10

    // Simple assignment
    x = 20
    scribe x  // 20

    // Compound assignments
    x += 5
    scribe x  // 25

    x -= 10
    scribe x  // 15

    x *= 2
    scribe x  // 30

    x /= 3
    scribe x  // 10

    // String concatenation
    varia textus s = "hello"
    s += " world"
    scribe s  // hello world
}
