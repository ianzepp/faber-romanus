// Nested allocator scopes
//
// cura arena fit <outer> { cura arena fit <inner> { } }
//
// Allocator scopes can nest. Inner scopes free before outer scopes.

incipit {
    cura arena fit outer {
        varia textus[] a = ["one"]

        cura arena fit inner {
            varia textus[] b = ["two"]
            scribe "Inner:", b
        }
        // inner freed here

        a.adde("three")
        scribe "Outer:", a
    }
    // outer freed here
}
