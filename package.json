{
  "name": "faber-romanus",
  "version": "0.1.0",
  "description": "A Latin-to-JavaScript transpiler - The Roman Craftsman",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "faber": "./src/cli.ts"
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --outfile=dist/faber.js --target=node",
    "test": "bun test",
    "check": "bun run src/cli.ts check",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.50.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "keywords": ["latin", "transpiler", "compiler", "javascript"],
  "license": "MIT"
}
