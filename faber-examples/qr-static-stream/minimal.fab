// Minimal working example

// Function with explicit return type (arrow syntax)
functio salve(nomen) -> Textus {
  redde "Salve, " + nomen + "!"
}

fixum greeting = salve("Mundus")
scribe(greeting)

// Numeric function
functio add(a, b) -> Numerus {
  redde a + b
}

scribe(add(2, 3))

// Control flow
fixum x = 10
si x > 5 {
  scribe("x est magnus")
}

// While loop
esto i = 0
dum i < 3 {
  scribe(i)
  i = i + 1
}
